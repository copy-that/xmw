.prod {
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  min-height: 112px;

  .prod-icon {
    margin-top: 10px;
    position: relative;
    width: 100px;
    height: 85px;

    .prod-img {
      width: 100%;
      height: 100%;
    }

    .prod-img-pages {
      position: absolute;
      bottom: 0;
      right: 0;
      width: 30px;
      height: 12px;
      background-color: rgba(0, 0, 0, 0.5);
      color: #ffffff;
      text-align: center;
      line-height: 12px;
      border-radius: 2px;
      font-size: 10px;
    }
  }

  .prod-info {
    text-align: left;
    flex: 1;
    margin-left: 15px;
    position: relative;

    .prod-name {
      position relative
      margin-top: 10px;
      font-size: 15px;
      line-height: 18px;
      .prod-enjoy{
        position absolute
        top: 0
        right: 18px
        height 15px
        width 15px
      }
    }

    .prod-value, .prod-time {
      margin-top: 10px;
      color: rgba(159, 159, 159, 1);
      font-size: 11px;
    }

    .prod-value {
      margin-top: 15px;

      span {
        margin-right: 20px;
      }
    }

    .prod-tags {
      margin-top: 10px;
      color: #FF6B00;
      font-size: 10px;
      margin-right: 60px;
      span {
        display: inline-block;
        margin-right: 6px;
        margin-bottom: 6px;
        height: 13px;
        width: 50px;
        line-height: 13px;
        text-align: center;
        border-radius: 2px;
        background-color: #ffe1ce;
      }
    }

    .prod-price {
      position: absolute;
      color: #FF6B00;
      top: 45px;
      right: 0;
      font-size: 15px;
    }

    .prod-enjoy {
      position: absolute;
      top: 0;
      right: 0;
      height: 13px;
      width: 13px;
    }
  }
}
.mask {
  position: fixed;
  z-index: 9;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(52, 52, 52, 0.4);
}
.cell
    position relative
    display flex
    align-items center
    height 54px
    justify-content space-between
    border-bottom 1px solid #f1f1f1
    .cell-label
        font-size:15px
    .cell-value
        flex: 1
        padding-left: 30px
        text-align: left
        font-size:13px
        color: #666666
    .radio-box
        flex 1
        display flex
        align-items center
        margin-left 30px
    .cell-input
        margin-left 30px
        flex 1
        color #717171
        font-size 13px
        border none 
        outline none 
        text-align left
    .cell-right-icon
        // position absolute
        // top: 20px
        // right 0
        width 7px
        height 13px
.primary-btn
    margin 50px auto 0
    padding 12px 15px
    width 300px
.radio-item
    margin-right 30px
    font-size 13px
    color #111111
    .form_item_radio
        display: inline-block;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        vertical-align: middle;
        margin-right: 10px;
        position: relative;
    .form_item_radio:before
        position: absolute;
        content: '';
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        width: 10px;
        height: 10px;
        background-image: url(../images/icon-7.png);
.radio-item.is_check
    .form_item_radio:before
        background-image: url(../images/icon-6.png);
.textarea
    margin-top 25px
    border-radius 2px
    border 1px solid #f2f2f2
    outline none
    color #666666
    font-size 13px
    padding 10px
    resize none
    width 100%
    box-sizing border-box