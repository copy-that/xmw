.prod {
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  height: 112px;

  .prod-icon {
    margin-top: 10px;
    position: relative;
    width: 100px;
    height: 85px;

    .prod-img {
      width: 100%;
      height: 100%;
    }

    .prod-img-pages {
      position: absolute;
      bottom: 0;
      right: 0;
      width: 30px;
      height: 12px;
      background-color: rgba(0, 0, 0, 0.5);
      color: #ffffff;
      text-align: center;
      line-height: 12px;
      border-radius: 2px;
      font-size: 10px;
    }
  }

  .prod-info {
    text-align: left;
    flex: 1;
    margin-left: 15px;
    position: relative;

    .prod-name {
      position relative
      margin-top: 10px;
      font-size: 15px;
      line-height: 18px;
      .prod-enjoy{
        position absolute
        top: 0
        right: 18px
        height 15px
        width 15px
      }
    }

    .prod-value, .prod-time {
      margin-top: 10px;
      color: rgba(159, 159, 159, 1);
      font-size: 11px;
    }

    .prod-value {
      margin-top: 15px;

      span {
        margin-right: 20px;
      }
    }

    .prod-tags {
      margin-top: 10px;
      color: #FF6B00;
      font-size: 10px;

      span {
        display: inline-block;
        margin-right: 6px;
        height: 13px;
        width: 50px;
        line-height: 13px;
        text-align: center;
        border-radius: 2px;
        background-color: #ffe1ce;
      }
    }

    .prod-price {
      position: absolute;
      color: #FF6B00;
      top: 45px;
      right: 0;
      font-size: 15px;
    }

    .prod-enjoy {
      position: absolute;
      top: 0;
      right: 0;
      height: 13px;
      width: 13px;
    }
  }
}
.mask {
  position: fixed;
  z-index: 9;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(52, 52, 52, 0.4);
}